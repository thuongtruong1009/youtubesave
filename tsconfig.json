{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "*": ["types/*", "node_modules/*"]
    }
  },

  "include": ["./**/*.ts", "./**/*.json"],
  "exclude": ["node_modules", "tests", "client", "dist"]
}
